{
  "name": "@mangrovedao/bot-template",
  "version": "0.0.1",
  "author": "Mangrove DAO",
  "description": "TODO: Write description for bot here",
  "license": "BSD-2-Clause",
  "main": "build/index.js",
  "keywords": [
    "Mangrove",
    "keeper",
    "bot"
  ],
  "scripts": {
    "precommit": "lint-staged",
    "prepack": "yarn build",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "build-this-package": "tsc && yarn run write-env-info-file",
    "heroku-build-this-package": "yarn run build-this-package",
    "build": "yarn install && yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run build-this-package",
    "clean-this-package": "rimraf build",
    "clean": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run clean-this-package",
    "test-with-dependencies": "yarn workspaces foreach -vpiR --topological-dev --from $npm_package_name run test",
    "test": "npm-run-all \"test:*\"",
    "test:integration": "cross-env NODE_ENV=test NODE_OPTIONS=\"--max-old-space-size=8192\" mocha --config test/mocha/config/integration-tests.json",
    "start": "node build/index.js",
    "write-env-info-file": "node ./scripts/writeEnvInfoFile.js"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "@ethersproject/experimental": "^5.6.1",
    "@mangrovedao/commonlib.js": "workspace:*",
    "@mangrovedao/mangrove.js": "workspace:*",
    "@types/big.js": "^6.1.3",
    "@types/finalhandler": "^1.1.1",
    "@types/serve-static": "^1.13.10",
    "big.js": "^6.1.1",
    "config": "^3.3.7",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.6.4",
    "fast-safe-stringify": "^2.1.1",
    "finalhandler": "^1.2.0",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "@espendk/json-file-reporter": "^1.4.2",
    "@ethersproject/hardware-wallets": "^5.6.0",
    "@mangrovedao/mangrove-solidity": "workspace:*",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/config": "^0.0.41",
    "@types/dotenv-flow": "^3.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18.0.0",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.22.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "lint-staged": "^13.0.2",
    "mocha": "^10.0.0",
    "mocha-multi-reporters": "^1.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "prettier-eslint": "^15.0.1",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.2"
  }
}
